{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,md,js}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json"
    ]
  },
  "scripts": {
    "test": "jest src/**.test.js",
    "test:watch": "jest src/**.test.js --watch",
    "format": "prettier --write ./src/**/*.js"
  },
  "devDependencies": {
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3"
  },
  "dependencies": {}
}
