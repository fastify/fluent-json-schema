{
  "name": "fluent-schema",
  "version": "0.9.0",
  "description": "JSON Schema fluent API",
  "main": "src/FluentSchema.js",
  "typings": "src/FluentSchema.d.ts",
  "keywords": [
    "JSON",
    "schema",
    "jsonschema",
    "json schema",
    "validation",
    "json schema builder",
    "json schema validation"
  ],
  "license": "MIT",
  "author": "Lorenzo Sicilia <lorenzo.sicilia@gmail.com>",
  "contributors": [
    "Matteo Collina <hello@matteocollina.com>"
  ],
  "homepage": "https://github.com/fastify/fluent-schema#readme",
  "bugs": {
    "url": "https://github.com/fastify/fluent-schema/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fastify/fluent-schema.git"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,md,js,ts}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json"
    ]
  },
  "scripts": {
    "test": "jest src/**.test.js --verbose && yarn typescript",
    "test:watch": "jest src/**.test.js --verbose --watch",
    "typescript": "tsc --project ./src/types/tsconfig.json",
    "format": "prettier --write ./src/**/*.js",
    "coverage": "jest src/**.test.js --coverage",
    "doc": "jsdoc2md ./src/*.js > docs/API.md"
  },
  "devDependencies": {
    "ajv": "^6.5.5",
    "husky": "^1.1.3",
    "jest": "^24.3.1",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^8.0.4",
    "lodash.merge": "^4.6.2",
    "prettier": "^1.14.3",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  }
}
