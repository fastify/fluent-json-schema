{
  "name": "fluent-json-schema",
  "version": "2.0.2",
  "description": "JSON Schema fluent API",
  "main": "src/FluentJSONSchema.js",
  "typings": "src/FluentJSONSchema.d.ts",
  "keywords": [
    "JSON",
    "schema",
    "jsonschema",
    "json schema",
    "validation",
    "json schema builder",
    "json schema validation"
  ],
  "license": "MIT",
  "author": "Lorenzo Sicilia <lorenzo.sicilia@gmail.com>",
  "contributors": [
    "Matteo Collina <hello@matteocollina.com>"
  ],
  "homepage": "https://github.com/fastify/fluent-json-schema#readme",
  "bugs": {
    "url": "https://github.com/fastify/fluent-json-schema/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fastify/fluent-json-schema.git"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/example.js",
      "!src/types/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcovonly"
    ]
  },
  "lint-staged": {
    "*.{json,md,js,ts,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "coverage": "jest --coverage",
    "doc": "jsdoc2md ./src/*.js > docs/API.md",
    "format": "prettier --write ./src/**/*.js",
    "test": "jest --verbose && npm run typescript",
    "test:coverage": "jest --coverage && npm run typescript",
    "test:watch": "jest --verbose --watch",
    "typescript": "tsc --project ./src/types/tsconfig.json"
  },
  "devDependencies": {
    "ajv": "^6.10.2",
    "ajv-keywords": "^3.4.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jsdoc-to-markdown": "^6.0.1",
    "lint-staged": "^10.5.3",
    "lodash.merge": "^4.6.2",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "deepmerge": "^4.2.2"
  }
}
