{
  "name": "fluent-schema",
  "version": "0.0.1",
  "description": "JSON Schema fluent API",
  "main": "src/FluentSchema.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fastify/fluent-schema.git"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,md,js}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json"
    ]
  },
  "scripts": {
    "test": "jest src/**.test.js --verbose",
    "test:watch": "jest src/**.test.js --verbose --watch",
    "format": "prettier --write ./src/**/*.js",
    "coverage": "jest src/**.test.js --coverage"
  },
  "devDependencies": {
    "ajv": "^6.5.5",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3"
  },
  "dependencies": {}
}
